<section>
    <div class="container">
        <table class="table mt-5">
            <thead>
                <tr>
                    <th scope="col">Item</th>
                    <th scope="col">Title</th>
                    <th scope="col">Quantity</th>
                </tr>
            </thead>
            <tbody>
                {{#each product}}

                

                <tr>
                    
                    <td> <img style="width: 70px; height:70px" src="/product-images/{{this.product._id}}.jpg"/></td>
                    <td>{{this.product.Name}}</td>
                    <td>{{this.product.Price}}</td>
                    
                    <td> <button class="cart-item-count mr-3" onclick="changeQuantity('{{this._id}}', '{{this.product._id}}', '{{../user}}',-1)"> -</button><span id="{{this.product._id}}"> {{ this.quantity }}</span> <button class="cart-item-count ml-3"
                    onclick="changeQuantity('{{this._id}}', '{{this.product._id}}', '{{../user}}',1)"> + </button></td>
                    <td> <a href="" class="btn btn-danger">Remove</a></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        <hr/>
        <div class="float-right pr-5">

        </div>
        <h5 class="float-right mr-5 "><span id="total"> {{totalValue.total}}</span></h5>
        <a href="/place-order" class="  btn btn-success mt-3" style="width: 100%"> Place Order</a>
    </div>
</section>

