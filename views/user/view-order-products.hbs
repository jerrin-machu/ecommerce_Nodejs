

    <section>
        <div class="container mt-5">
            <div class="row">
                {{#each products}}
                <div class="col-md-3 p-3">
                    <div class="card" style="width: 15rem; height:26rem">
                        <img class="card-img-top" src="/product-images/{{this.item}}.jpg" style="height:15rem">
                            <div class="card-body">
                                <h5 class="card-title">{{this.product.Name}}</h5>
                                    <p class="card-text">{{ this.product.Description }}</p>
                                    <p class="card-text">{{ this.product.Price }}</p>

                                    
                            </div>
                    </div>
                </div>

                {{/each}}

                 

                 


                 
            </div>
        </div>
    </section>

    
